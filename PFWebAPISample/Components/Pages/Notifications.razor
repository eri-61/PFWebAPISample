    h3 {
        text-align: center;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        font-weight: bold;
    }

    body {
        background: #BFF4FF;
    }

    button {
        transition-duration: 0.4s;
        background-color: white;
        border: 1px solid #FF8FB1;
    }

        button:hover {
            background-color: #FF8FB1;
            color: white;
        }

    .tabs {
        margin: 10px;
    }

    .DP {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 1px solid black;
        margin: 5px
    }

    .Mentions {
        margin: 5px;
        padding: 10px;
        border: 1px solid grey;
        background: #FFF1F5;
    }

    .Messages {
        margin: 5px;
        padding: 10px;
        border: 1px solid grey;
        background: #FFF1F5;
    }

</style>
